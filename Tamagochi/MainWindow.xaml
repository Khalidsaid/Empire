        <Label Name="labelSoldier" Content="0" Grid.Column="9" HorizontalAlignment="Left" Margin="134,13,-111,0" Grid.Row="9" VerticalAlignment="Top" Width="46" Height="25" RenderTransformOrigin="0.464,13.266"/>
